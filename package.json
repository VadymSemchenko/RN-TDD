{
  "name": "tdd",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest tests/**/*.spec.js",
    "detox": "concurrently \"yarn:start\" \"detox test && killall node\"",
    "total-test": "concurrently \"yarn:test\" \"yarn:detox\"",
    "lint": "eslint *.js e2e/*.js tests/**/*.js"
  },
  "dependencies": {
    "ramda": "0.26.1",
    "react": "16.6.3",
    "react-native": "0.56",
    "react-native-git-upgrade": "0.2.7"
  },
  "devDependencies": {
    "tslint": "5.12.1",
    "tslint-config-airbnb": "5.11.1",
    "tslint-config-prettier": "1.17.0",
    "tslint-plugin-prettier": "2.0.1",
    "tslint-react": "3.6.0",
    "babel-core": "7.0.0-bridge.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "3.6.0",
    "eslint-plugin-prettier": "3.0.1",
    "@jonny/react-native-mock": "0.4.2",
    "@types/react": "16.7.21",
    "@types/react-native": "0.57.32",
    "babel-eslint": "10.0.1",
    "babel-jest": "23.6.0",
    "detox": "10.0.2",
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "1.7.1",
    "eslint": "5.12.1",
    "eslint-plugin-detox": "1.0.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jest": "22.1.3",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-react": "7.12.4",
    "jest": "23.6.0",
    "metro-react-native-babel-preset": "0.51.1",
    "prettier": "1.16.1",
    "react-native-typescript-transformer": "1.2.11",
    "react-test-renderer": "16.6.3",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "3.2.4"
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "./tests/setup.js"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
    }
  },
  "detox": {
    "test-runner": "jest",
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/tdd.app",
        "build": "xcodebuild -project ios/tdd.xcodeproj -scheme tdd -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone SE"
      }
    }
  }
}
