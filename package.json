{
  "name": "tdd",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "yarn clear && cd android/ && ./gradlew clean && cd .. && adb reverse tcp:9090 tcp:9090 && ENVFILE=.env.development react-native run-android ",
    "ios": "yarn clear && ENVFILE=.env.development react-native run-ios --simulator='iPhone SE' ",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "ENVFILE=.env.unit-test jest src/tests/**/*.spec.js",
    "detox-android": "concurrently \"yarn:start\" \"cd android && ./gradlew assembleAndroidTest && cd .. && ENVFILE=.env.e2e-test detox test -c android.emu.debug && killall node\"",
    "detox-ios": "concurrently \"yarn:start\" \"ENVFILE=.env.e2e-test detox test -c ios.sim.debug && killall node\"",
    "es-lint": "eslint src/**/*.js",
    "clear": "rm -rf $TMPDIR/react-*; rm -rf $TMPDIR/haste-*; rm -rf $TMPDIR/metro-*; watchman watch-del-all; yarn cache clean",
    "clear-modules": "rm -rf node_modules yarn.lock && yarn && yarn clear"
  },
  "dependencies": {
    "ramda": "0.26.1",
    "react": "16.7.0",
    "react-native": "0.56",
    "react-native-config": "0.11.7",
    "react-native-device-info": "0.25.1",
    "react-native-git-upgrade": "0.2.7"
  },
  "devDependencies": {
    "@jonny/react-native-mock": "0.4.2",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "23.6.0",
    "concurrently": "4.1.0",
    "detox": "10.0.2",
    "detox-expo-helpers": "0.6.0",
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "1.7.1",
    "eslint": "5.12.1",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "3.6.0",
    "eslint-plugin-detox": "1.0.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jest": "22.1.3",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-native": "^3.6.0",
    "jest": "23.6.0",
    "jest-fetch-mock": "2.1.0",
    "metro-react-native-babel-preset": "0.51.1",
    "prettier": "1.16.1",
    "prop-types": "15.6.2",
    "react-dom": "16.7.0",
    "react-test-renderer": "16.6.3",
    "reactotron-react-native": "2.1.4"
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "./src/tests/setup.js"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
    },
    "globals": {
      "__DEV__": false
    }
  },
  "detox": {
    "test-runner": "jest",
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/tdd.app",
        "build": "xcodebuild -project ios/tdd.xcodeproj -scheme tdd -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone SE"
      },
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
        "type": "android.emulator",
        "name": "small_6"
      },
      "android.emu.release": {
        "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
        "build": "cd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release && cd ..",
        "type": "android.emulator",
        "name": "small_6"
      }
    }
  }
}
